<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blueit.g1_chat" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DBApp"
        android:allowBackup="true"
        android:icon="@mipmap/g1_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsflashActivity"
            android:label="@string/title_activity_newsflash"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".CreateNewsflashActivity"
            android:label="@string/title_activity_create_newsflash" >
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/activity_register" >
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".EditMessageActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name=".ChannelListActivity"
            android:label="@string/title_activity_channel_list"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".CreateChannelActivity"
            android:label="@string/title_activity_create_channel">
        </activity>

    </application>

</manifest>
